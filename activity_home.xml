<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:backgroundTint="@color/white"
    android:background="@drawable/Discover">

    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">


        <ImageView
            android:id="@+id/notification"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:layout_alignParentStart="true"
            android:contentDescription="Notification Icon"
            android:src="@drawable/notifications">
        </ImageView>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Fashion And Flacko"
            android:textColor="#FFD700"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/menu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Menu Icon"
            android:src="@drawable/menu" />


    </RelativeLayout>

    <ImageView
        android:layout_width="415dp"
        android:layout_height="303dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/desain1"
        android:layout_marginTop="100dp"
        />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/account"
        android:paddingTop="70dp"
        android:paddingLeft="17dp">
    </ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="5dp"
        android:paddingTop="140dp"
        android:text="USER ID: 12345"
        android:textSize="15dp"
        tools:ignore="TextSizeCheck"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Popular Products"
        android:textSize="12pt"
        android:paddingTop="430dp"
        android:paddingLeft="15dp"
        android:textColor="#802525">
    </TextView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/previewbaju"
        android:layout_marginEnd="30dp"
        android:paddingTop="370dp"
        layout android:layout_centerInParent="true"></ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/explorw"
        android:paddingTop="950dp"
        android:paddingRight="60dp"
        android:paddingLeft="20dp"></ImageView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bulat"
        android:paddingBottom="250dp">

    </ImageView>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/shapes1" />



</RelativeLayout>

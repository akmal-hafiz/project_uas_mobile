<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottomnav"> <!-- Pastikan ScrollView tidak menutupi BottomNavigationView -->


        <RelativeLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".Home">



            <ImageView
                android:id="@+id/notification"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/baseline_notifications_none_24"
                android:layout_alignParentStart="true"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="10dp"
                tools:ignore="ContentDescription,RtlHardcoded" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/baseline_menu_24"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="15dp"
                android:layout_marginRight="10dp"
                tools:ignore="ContentDescription,RtlHardcoded">
            </ImageView>

            <ImageView
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/vektormen"
                android:layout_below="@id/notification"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription">
            </ImageView>

            <TextView
                android:id="@+id/USERID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="8dp"
                android:text="ID:12345"
                android:textSize="8pt"
                tools:ignore="HardcodedText,RtlHardcoded,TextSizeCheck">
            </TextView>

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:text="Fashion And Flacko"
                android:textColor="#FAE55B"
                android:textSize="13pt"
                android:textStyle="bold"
                tools:ignore="HardcodedText,TextContrastCheck">
            </TextView>

            <ImageView
                android:id="@+id/benner1"
                android:layout_width="441dp"
                android:layout_height="110dp"
                android:layout_below="@id/USERID"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/group1"
                tools:ignore="ContentDescription"
                >
            </ImageView>

            <ImageView
                android:id="@+id/bulat1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/benner1"
                android:layout_margin="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:src="@drawable/bulat1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/label1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shirt"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_below="@id/bulat1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <ImageView
                android:id="@+id/bulat2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/benner1"
                android:layout_margin="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:src="@drawable/bulat2"
                android:layout_toRightOf="@id/bulat1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="jacket"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_below="@id/bulat2"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="63dp"
                android:layout_toRightOf="@id/label1"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <ImageView
                android:id="@+id/bulat3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/benner1"
                android:layout_margin="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:src="@drawable/bulat3"
                android:layout_toRightOf="@id/bulat2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Hat's"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_below="@id/bulat3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="63dp"
                android:layout_toRightOf="@id/label2"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <ImageView
                android:id="@+id/bulat4"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_below="@id/benner1"
                android:layout_margin="16dp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="60dp"
                app:cardElevation="8dp"
                android:src="@drawable/bulat4"
                android:layout_toRightOf="@id/bulat3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>

            <TextView
                android:id="@+id/label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Shoe's"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="16sp"
                android:layout_gravity="center"
                android:layout_below="@id/bulat3"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="63dp"
                android:layout_toRightOf="@id/label3"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <TextView
                android:id="@+id/Popular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="47dp"
                android:text="Popular Products"
                android:textStyle="bold"
                android:textColor="#802525"
                android:textSize="10pt"
                android:layout_gravity="center"
                android:layout_below="@id/label1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                tools:ignore="HardcodedText,RtlHardcoded">
            </TextView>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

            </ScrollView>


            <FrameLayout
                android:id="@+id/frame1"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_margin="16dp"
                android:layout_below="@id/Popular"
                >


                <ImageView
                    android:id="@+id/frameImage1"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product1"
                    android:layout_marginRight="12dp">

                </ImageView>


                <ImageView
                    android:id="@+id/productImage1"
                    android:layout_width="174dp"
                    android:layout_height="160dp"
                    android:layout_gravity="top"
                    android:src="@drawable/oldshirt" />

                <TextView
                    android:id="@+id/productname1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Old Timer t'shirt"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.400 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame2"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_below="@id/Popular"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/frame1">


                <ImageView
                    android:id="@id/frameImage2"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="11dp"
                    android:src="@drawable/product2">

                </ImageView>

                <TextView
                    android:id="@+id/productname2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Yankees Hat"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.400 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>

                <ImageView
                    android:id="@+id/productImage2"
                    android:layout_width="174dp"
                    android:layout_height="160dp"
                    android:layout_gravity="top"
                    android:src="@drawable/yankeehat" />
            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame3"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_below="@id/frame1"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="17dp">

                <ImageView
                    android:id="@id/frameImage3"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product3"
                    android:layout_marginRight="11dp">

                </ImageView>

                <ImageView
                    android:id="@+id/productImage3"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:src="@drawable/flaredjeans"
                    />


                <TextView
                    android:id="@+id/productname3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Flared Jeans"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.700 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>

            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame4"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_below="@id/frame1"
                android:layout_toRightOf="@id/frame3"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="17dp">

                <ImageView
                    android:id="@id/frameImage4"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product3"
                    android:layout_marginRight="11dp">

                </ImageView>

                <ImageView
                    android:id="@+id/productImage4"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:src="@drawable/whitetes"
                    />


                <TextView
                    android:id="@+id/productname4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Bear White Tee's"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.400 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>

            </FrameLayout>

            <FrameLayout
                android:id="@+id/frame5"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_below="@id/frame3"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="17dp">

                <ImageView
                    android:id="@id/frameImage5"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product3"
                    android:layout_marginRight="11dp">

                </ImageView>

                <ImageView
                    android:id="@+id/productImage5"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:src="@drawable/graphitees"
                    tools:ignore="DuplicateIds" />


                <TextView
                    android:id="@+id/productname5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="graphic Tee's"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga5"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.550 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>
            </FrameLayout>


            <FrameLayout
                android:id="@+id/frame6"
                android:layout_width="190dp"
                android:layout_height="190dp"
                android:layout_below="@id/frame4"
                android:layout_marginTop="18dp"
                android:layout_toRightOf="@id/frame5"
                android:layout_marginLeft="17dp">

                <ImageView
                    android:id="@id/frameImage6"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:src="@drawable/product4"
                    android:layout_marginRight="11dp">

                </ImageView>

                <ImageView
                    android:id="@+id/productImage6"
                    android:layout_width="170dp"
                    android:layout_height="150dp"
                    android:layout_gravity="top"
                    android:src="@drawable/converse"
                    tools:ignore="DuplicateIds" />


                <TextView
                    android:id="@+id/productname6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Converse Blu'e OX"
                    android:layout_marginTop="145dp"
                    android:layout_marginLeft="20dp"
                    tools:ignore="MissingPrefix"
                    android:textColor="#000000"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:id="@+id/harga6"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="165dp"
                    android:text="Rp.895 rb"
                    android:textColor="#3E703E"
                    android:textStyle="bold"
                    tools:ignore="MissingPrefix">

                </TextView>
            </FrameLayout>

        </RelativeLayout>
    </ScrollView>


    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomnav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/white"
        app:itemIconTint="@color/black"
        app:itemTextColor="@color/black"
        app:menu="@menu/menu"
        tools:ignore="VisualLintBottomNav" />
</RelativeLayout>

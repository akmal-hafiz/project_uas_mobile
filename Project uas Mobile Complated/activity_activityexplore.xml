<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activityexplore">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/back1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow_circle_left"
            android:layout_alignParentStart="true"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="10dp"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <!-- Judul -->
        <TextView
            android:id="@+id/title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Fashion And Flacko"
            android:textColor="#FAE55B"
            android:textSize="13pt"
            android:textStyle="bold"
            tools:ignore="HardcodedText,TextContrastCheck" />


        <ImageView
            android:id="@+id/menu"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/baseline_menu_24"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="10dp"
            tools:ignore="ContentDescription,RtlHardcoded" />


        <androidx.cardview.widget.CardView
            android:id="@+id/searchCard"
            android:layout_width="288dp"
            android:layout_height="40dp"
            app:cardCornerRadius="30dp"
            app:cardElevation="4dp"
            android:layout_margin="16dp"
            android:layout_below="@id/title1"
            android:backgroundTint="#D9D9D9"
            android:layout_centerHorizontal="true">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp">


                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/baseline_search_24"
                    android:contentDescription="Search Icon"
                    android:layout_marginEnd="8dp" />


                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:hint="Search Products"
                    android:inputType="text"
                    android:textColor="#000000"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <RelativeLayout
            android:id="@+id/rectangles1"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:background="@drawable/rounded_rectangle"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_margin="8dp"
            android:layout_below="@id/searchCard"
            android:gravity="center_horizontal"
            android:layout_centerInParent="true">


            <ImageView
                android:id="@+id/textrectangle1"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:src="@drawable/textbenner1"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="115dp"
                tools:layout_editor_absoluteY="13dp">

            </ImageView>

            <ImageView
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:src="@drawable/nikejoyride"
                tools:ignore="MissingConstraints,UnknownId"
                android:layout_marginTop="42dp"
                android:layout_marginLeft="17dp">

            </ImageView>

        </RelativeLayout>


        <ImageView
            android:id="@+id/rectangles2"
            android:layout_width="380dp"
            android:layout_height="120dp"
            android:layout_below="@id/rectangles1"
            android:layout_marginTop="-4dp"
            android:src="@drawable/rectangle2"
            android:layout_centerInParent="true"
            tools:ignore="InvalidId">
        </ImageView>


        <FrameLayout
            android:id="@+id/frameexpl1"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_margin="16dp"
            android:layout_below="@id/rectangles2"
            >


            <ImageView
                android:id="@+id/explImage1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/product1"
                android:layout_marginRight="12dp">

            </ImageView>


            <ImageView
                android:id="@+id/explproductImage1"
                android:layout_width="174dp"
                android:layout_height="160dp"
                android:layout_gravity="top"
                android:src="@drawable/leatherjacket" />

            <TextView
                android:id="@+id/explproductname1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Leather Jacket"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/explharga1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="165dp"
                android:text="Rp.750 rb"
                android:textColor="#3E703E"
                android:textStyle="bold"
                tools:ignore="MissingPrefix">
            </TextView>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frameexpl2"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@id/rectangles2"
            android:layout_marginTop="18dp"
            android:layout_toRightOf="@id/frameexpl1">

            <ImageView
                android:id="@id/explImage2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/product2"
                android:layout_marginRight="11dp">

            </ImageView>


            <TextView
                android:id="@+id/explproductname2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Volunteer Jacket"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/explharga2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="165dp"
                android:text="Rp.600 rb"
                android:textColor="#3E703E"
                android:textStyle="bold"
                tools:ignore="MissingPrefix">

            </TextView>

            <ImageView
                android:id="@+id/productImage2"
                android:layout_width="174dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:src="@drawable/volunteer" />
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frameexpl3"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@id/frameexpl2"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17dp">

            <ImageView
                android:id="@id/explImage3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/product3"
                android:layout_marginRight="11dp">

            </ImageView>

            <ImageView
                android:id="@+id/explproductImage3"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:src="@drawable/blackaid"
                />


            <TextView
                android:id="@+id/explproductname3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Blackaid Jacket"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/explharga3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="165dp"
                android:text="Rp.550 rb"
                android:textColor="#3E703E"
                android:textStyle="bold"
                tools:ignore="MissingPrefix">

            </TextView>
        </FrameLayout>


        <FrameLayout
            android:id="@+id/frame4"
            android:layout_width="190dp"
            android:layout_height="190dp"
            android:layout_below="@id/frameexpl2"
            android:layout_toRightOf="@id/frameexpl3"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="17dp">

            <ImageView
                android:id="@id/frameImage4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:src="@drawable/product3"
                android:layout_marginRight="11dp">

            </ImageView>

            <ImageView
                android:id="@+id/productImage4"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_gravity="top"
                android:src="@drawable/karmaclub"
                />


            <TextView
                android:id="@+id/productname4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="KarmaClub Jacket"
                android:layout_marginTop="145dp"
                android:layout_marginLeft="20dp"
                tools:ignore="MissingPrefix"
                android:textColor="#000000"
                android:textStyle="bold">
            </TextView>

            <TextView
                android:id="@+id/harga4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="165dp"
                android:text="Rp.700 rb"
                android:textColor="#3E703E"
                android:textStyle="bold"
                tools:ignore="MissingPrefix">

            </TextView>

        </FrameLayout>


        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomnav"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            app:itemBackground="@color/white"
            app:itemIconTint="@color/black"
            app:itemTextColor="@color/black"
            app:menu="@menu/menu"
            tools:ignore="VisualLintBottomNav" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>
